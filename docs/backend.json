{
  "entities": {
    "TeamMember": {
      "title": "Team Member",
      "description": "Represents a member of the team.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the team member."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email of the team member."
        },
        "role": {
          "type": "string",
          "enum": ["Administrador", "TÃ©cnico", "Usuario"],
          "description": "The role of the team member."
        },
        "avatar": {
          "type": "object",
          "properties": {
            "icon": {
              "type": "string",
              "description": "The name of the lucide-react icon for the avatar."
            },
            "color": {
              "type": "string",
              "description": "The hex color code for the avatar background."
            }
          }
        }
      },
      "required": ["name", "email", "role", "avatar"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/team/{memberId}": {
      "schema": {
        "$ref": "#/entities/TeamMember"
      },
      "description": "Stores individual team member profiles."
    }
  }
}
